{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "gsap": "readonly",
    "ScrollTrigger": "readonly",
    "Lenis": "readonly",
    "BiometricAuth": "readonly",
    "THREE": "readonly",
    "Chart": "readonly",
    "PublicKeyCredential": "readonly"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "no-undef": "error",
    "no-prototype-builtins": "warn",
    "prefer-const": "warn",
    "no-var": "error",
    "eqeqeq": ["warn", "always", { "null": "ignore" }],
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-new-func": "error",
    "no-script-url": "error",
    "no-control-regex": "off",
    "no-case-declarations": "warn"
  },
  "overrides": [
    {
      "files": ["api/**/*.js"],
      "env": {
        "browser": false,
        "node": true
      },
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": ["api/**/__tests__/**/*.js", "**/*.test.js", "**/*.spec.js"],
      "env": {
        "jest": true,
        "node": true
      }
    },
    {
      "files": ["js/**/*.js"],
      "env": {
        "browser": true,
        "node": false
      },
      "globals": {
        "module": "readonly"
      }
    }
  ]
}
